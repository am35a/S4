{
    "extends": "@tsconfig/svelte/tsconfig.json",

    "include": ["src/**/*"],
    "exclude": ["node_modules/*", "__sapper__/*", "public/*"],

    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "src / *": ["src / *"]
        },
        "ignoreDeprecations": "5.0",
        "forceConsistentCasingInFileNames": false
    }
}